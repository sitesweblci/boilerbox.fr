{# src/Lci/BoilerBoxBundle/Resources/views/secondBonsLayout.html.twig #}
{% extends "::firstLayout.html.twig" %}

{% block liens_css %}
{{ parent() }}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/lciboilerbox/css/lightbox.css') }}" media='screen' />
{% endblock liens_css %}

{% block liens_url %}
{{ parent() }}
<input type='hidden' name='liens' id='liens' 
    data-bonsSaisie = "{{ path('lci_bons_saisie') }}"
    data-bonsVisualiser = "{{ path('lci_bons_visualiser') }}"
	data-bonsVisualiserRefresh = "{{ path('lci_bons_visualiser', {'refresh':1}) }}"
	data-accueilBons = "{{ path('lci_bons_attachements') }}"
	data-affinerRechercheBon = "{{ path('lci_bons_rechercher') }}"
	data-ajouterCGU = "{{ path('lci_cgu_form') }}"
	data-accepterCGU = "{{ path('lci_cgu_accepter') }}"
	data-bons-SaisieSite = "{{ path('lci_bons_admin_site_creer') }}"
	data-sitesBAVisualiser = "{{ path('lci_bons_sitesBA_visualiser') }}"
/>  
{% endblock liens_url %} 

{% block liens_menu %}
{% endblock liens_menu %}

{% block body %}
    {# On définit ce block, dans lequel vont venir s'insérer les autres vues du bundle #}
    {% block fos_user_content %}
    {% endblock fos_user_content %}

	<script type='text/javascript'>
		/* Remplacement du menu 'outils' par 'accueil' */
	    $('#lien_menu_boiler_outil').html("<a href={{ path('lci_boilerbox_index') }} title='Retour accueil'>Accueil</a>");
	    $('#sousmenu_boiler_deroulant1').addClass('nopadding');
	</script>
{% endblock %}

{% block javascript %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('bundles/lciboilerbox/js/lightbox.min.js') }}"></script>
{% endblock javascript %}
