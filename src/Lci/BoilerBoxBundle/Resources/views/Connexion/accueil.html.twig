			var $pattern_first_letters = /^(.).+?\s(.).+?$/g;
			if($tab = $pattern_first_letters.exec($label)) {
				var $initiales = $tab[1] + $tab[2];
				return($initiales.toLowerCase());
			} else {
				return $label.charAt(0).toLowerCase();
			}
		}
